{% if shop.id %}
  <link rel="stylesheet" href="https://engine.popsize.ai/latest/button.css" crossorigin="anonymous"/>
  <script
    src="https://engine.popsize.ai/latest/button.js"
    data-partner-id="shopify:{{ shop.id }}"
    data-ui-size="{% if shop.metafields.popsize.ui_size %}{{ shop.metafields.popsize.ui_size }}{% else %}medium{% endif %}"
    {% if customer %}
      data-customer-id="{{ customer.id }}"
      data-customer-email="{{ customer.email }}"
    {% endif %}
  ></script>
{% endif %}

{% schema %}
{
  "name": "Popsize Widget",
  "target": "section",
  "settings": []
}
{% endschema %}