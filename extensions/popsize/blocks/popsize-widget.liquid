{% if shop.id %}
  <link rel="stylesheet" href="https://engine.popsize.ai/latest/static/css/main.latest.css" crossorigin="anonymous"/>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      var script = document.createElement("script");
      script.src = "https://engine.popsize.ai/latest/static/js/main.latest.js";
      script.setAttribute("data-partner-id", "shopify:{{ shop.id }}");
      {% if shop.metafields.popsize.ui_size %}
        script.setAttribute("data-ui-size", "{{ shop.metafields.popsize.ui_size }}");
      {% endif %}
      document.body.appendChild(script);
    });
    /*
    {% if customer %}
      console.log("Customer email: {{ customer.email }}");
      console.log("Customer ID: {{ customer.id }}");
    {% endif %}
    */
  </script>
{% endif %}

